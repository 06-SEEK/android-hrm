<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogoImage" >
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">100dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="RoundedCornerButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_corner_blue_background</item>

    </style>

    <style name="CredentialInput" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:background">@drawable/rounded_corner_input_background</item>
    </style>

    <style name="Title" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dip</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GrayLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="GrayLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorGray</item>

    </style>
</resources>
